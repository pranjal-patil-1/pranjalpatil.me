  },
  {
    role: "Software Engineer",
    company: "Booking.com",
    location: "Amsterdam, Netherlands",
    period: "June 2018 - June 2019",
    highlights: [
      "Built large-scale session quality pipelines for 80M+ monthly active users.",
      "Generated 150M+ ML scoring outputs per day on petabyte-scale data systems."
    ]
  }
];

const earlierExperience = [
  "Senior Software Engineer, OLA (2016 - 2017)",
  "Senior Software Engineer, Hem (2015 - 2016)",
  "Software Engineer, Boomerang Commerce (2014 - 2015)",
  "R&D Engineer, Tejas Networks (2012 - 2014)"
];

const skillGroups = [
  {
    title: "Platforms & Architecture",
    items: ["Distributed Systems", "Payments Infrastructure", "Event-Driven Systems", "Microservices"]
  },
  {
    title: "Languages",
    items: ["Java", "Golang", "TypeScript", "Python"]
  },
  {
    title: "Data & Messaging",
    items: ["Kafka", "Redis", "MySQL", "PostgreSQL", "Spanner DB", "ClickHouse", "Spark"]
  },
  {
    title: "Cloud & Ops",
    items: ["GCP", "AWS", "Kubernetes", "Big Data Pipelines", "Reliability Engineering"]
  }
];
---

<Layout>
  <main class="site-shell">
    <section class="hero reveal">
      <div class="hero-layout">
        <div class="hero-copy">
          <p class="eyebrow">Pranjal Patil</p>
          <h1>Software engineer building reliable systems at internet scale.</h1>
          <p class="lede">
            Head of Engineering (Principal IC) based in Dubai, currently leading core banking services platform at MoniePoint.
          </p>
          <div class="cta-row">
            <a class="button primary" href="mailto:pranjalpatil88@gmail.com">Email</a>
            <a class="button" href="https://www.linkedin.com/in/pranjalpatil01" target="_blank" rel="noreferrer">LinkedIn</a>
            <a class="button" href="https://github.com/pranjal-patil-1" target="_blank" rel="noreferrer">GitHub</a>
          </div>
        </div>
        <div class="hero-photo-wrap">
          <img class="hero-photo" src="/pranjal.jpeg" alt="Pranjal Patil" loading="eager" />
        </div>
      </div>
    </section>

    <section class="card reveal delay-1">
      <h2>Scale @ Moniepoint </h2>
      <div class="metrics-grid">
        {impact.map((item) => (
          <article class="metric">
            <p class="value">{item.value}</p>
            <p>{item.label}</p>
          </article>
        ))}
      </div>
    </section>

    <section class="card reveal delay-2">
      <div class="section-heading">
        <h2>Professional Experience</h2>
        <p>Built and operated high-throughput systems across fintech, mobility, and e-commerce.</p>
      </div>
      <div class="timeline">
        {experience.map((job) => (
          <article class="timeline-item">
            <header>
              <p class="role">{job.role}</p>
              <p class="company">{job.company}</p>
              <p class="meta">{job.location} | {job.period}</p>
            </header>
            <ul>
              {job.highlights.map((highlight) => <li>{highlight}</li>)}
            </ul>
          </article>
        ))}
      </div>
      <div class="earlier">
        <h3>Earlier Experience</h3>
        <ul>
          {earlierExperience.map((job) => <li>{job}</li>)}
        </ul>
      </div>
    </section>

    <section class="split reveal delay-3">
      <article class="card">
        <h2>Core Skills</h2>
        <div class="skills-grid">
          {skillGroups.map((group) => (
            <div>
              <h3>{group.title}</h3>
              <ul>
                {group.items.map((item) => <li>{item}</li>)}
              </ul>
            </div>
          ))}
        </div>
      </article>
      <article class="card">
        <h2>Education</h2>
        <div class="education-block">
          <h3>National Institute of Technology, Karnataka (NITK)</h3>
          <p>Master of Technology in Computer Science</p>
          <p>Surathkal, Karnataka | 2010 - 2012</p>
        </div>
        <div class="education-block">
          <h3>University of Mumbai</h3>
          <p>Bachelor of Technology in Computer Science</p>
          <p>Mumbai, Maharashtra | 2006 - 2010</p>
        </div>
      </article>
    </section>

    <footer class="footer reveal delay-3">
      <p>Dubai, UAE</p>
      <p><a href="tel:+971551854920">+971 55 185 4920</a> | <a href="mailto:pranjalpatil88@gmail.com">pranjalpatil88@gmail.com</a></p>
    </footer>
  </main>
</Layout>
