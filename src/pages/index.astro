];

const experience = [
  {
    role: "Head of Engineering (Principal IC)",
    company: "MoniePoint",
    location: "Dubai, UAE",
    period: "June 2024 - Present",
    highlights: [
      "Designed a distributed multi-datastore payments ledger handling 1B+ daily transactions with sub-XX ms latency.",
      "Built core banking platforms across payments ledger, accounts, notifications and IAM for 20M+ users.",
      "Drove event-driven transaction architecture adopted by 10+ teams, raising uptime to 99.99%."
    ]
  },
  {
    role: "Principal Software Engineer, Senior Engineering Manager",
    company: "KingMakers (SuperPicks)",
    location: "Dubai, UAE",
    period: "February 2022 - June 2024",
    highlights: [
      "Launched and scaled fantasy sports products to 4M+ MAU with 30K+ RPS peak traffic.",
      "Rebuilt IAM into a stateless zero-trust platform, improving P99 latencies by 70%.",
      "Delivered cloud-cost reductions above 60% while completing zero-downtime migrations."
    ]
  },
  {
    role: "Senior Software Engineer, Engineering Manager",
    company: "Careem (an Uber company)",
    location: "Dubai, UAE",
